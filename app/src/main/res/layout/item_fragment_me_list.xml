<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemFragmentMeImage"
        tools:src="@drawable/s1"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:padding="4dp"
        android:background="#33000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <ImageView
            android:layout_marginStart="8dp"
            android:id="@+id/itemFragmentMeHead"
            android:src="@drawable/list207"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/itemFragmentMeThumbsUp"
            android:layout_marginEnd="8dp"
            android:text="10"
            android:gravity="center"
            android:textColor="#ffffff"
            android:drawableTint="#ffffff"
            android:drawableStart="@drawable/ic_thumb_up_white_24dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/itemFragmentMePlace"
            tools:text="asdasdsad"
            android:gravity="center|start"
            android:layout_toStartOf="@id/itemFragmentMeThumbsUp"
            android:layout_toEndOf="@id/itemFragmentMeHead"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>


</RelativeLayout>