<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#c0c0c0">

    <ImageView
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fab"
        android:layout_width="64dp"
        android:layout_height="64dp" />
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="228dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#00ffff"
            android:layout_gravity="end"
            android:textSize="32sp"
            android:text="西丽"
            android:drawableRight="@drawable/ic_chevron_right_cyan_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:textColor="#ffffff"
            android:text="1.1m/s 北风 小于三级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragmentWeatherForecastTemp"
                android:textSize="42sp"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff"
                android:text="28.2°"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignBottom="@id/fragmentWeatherForecastTemp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="At 11:04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="温度:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="能见度:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="气压:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="24小时降水量"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="77%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="2.8km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="1009.7hpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="9.8mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="3小时内温度已提高5度，请关注"
            android:drawableStart="@drawable/ic_warning_white_24dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/shape_rect_huge_corner_black_alpha"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/index_icon_leaf_foliage_leafage_green"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:text="42优"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>